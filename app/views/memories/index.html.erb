<h1>~ <%= image_tag(current_user.image) %> <%= current_user.username_capitalized_and_split %>'s Memories ~</h1><br>

<% if !@memories.empty? %>
    <ul>
    <% @memories.each do |memory| %>
      <div>
        <h3>"<%= memory.title_capitalized %>" <%= link_to 'View Memory', memory_path(memory) %></h3><br>
      </div>
    <% end %>
    </ul><br>
    
  <% else %>
    
    <h2><%= current_user.username_capitalized_and_split %>, you haven't made any Memories yet</h2>
    
  <% end %>

  <%= button_to "Add a Memory", new_memory_path %><br>

  <%= button_to "Home Page", root_path, :method => "get" %>