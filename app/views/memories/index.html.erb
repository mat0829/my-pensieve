<h1>~ <%= current_user.username.capitalize %>'s Memories ~</h1><br>

<% if !@memories.empty? %>
    <ul>
    <% @memories.each do |memory| %>
      <div>
        <h3>"<%= memory.title.capitalize %>" <%= link_to 'View Memory', show_memory_path %></h3><br>
      </div>
    <% end %>
    </ul><br>
    
  <% else %>
    
    <h2><%= current_user.username.capitalize %>, you haven't made any Memories yet</h2>
    
  <% end %>

  <%= button_to "Add a Memory", new_memory_path %>