<ul>
  <h1>"<%= @memory.title.capitalize %>"</h1><br>
  <p><%= @memory.content.capitalize %></p>
</ul>

<h3>Emotions:</h3>
<% @memory.emotions.each do |emotion| %>
  <li><a href="/emotions/<%= emotion.id %>"><%= emotion.name.capitalize %></a></li>
<% end %>

<h3>People/Pets:</h3>
<% @memory.players.each do |player| %>
  <li><a href="/players/<%= player.id %>"><%= player.name.split.map(&:capitalize).join(' ')
 %></a></li>
<% end %><br>

<%= link_to "Edit Memory", edit_memory_path(@memory.id) %><br><br>

<%= link_to "Memories Page", memories_path %><br><br>

<%= link_to "Home Page", root_path %><br><br>

<%= button_to "Delete", memory_path(@memory), method: :delete, data: { confirm: "Are you sure?" } %>